/* pages/JobList/JobList.wxss */
.aOn {
    color: #3bc032!important;
    background-color: #e8f8e7!important;
}
.view1{
  background-color: #e9ece9;
}
.view2{
  background-color: #fff;
}
.head-tbl{
    z-index: 2;
}
.jobListHead{
  position: fixed;
  top: 0;
  width: 100%;
  height: 43px;
  line-height: 43px;
  padding-top: 14px;
  background-color: #e9ece9;
  z-index: 2;
}
.sousuo{
  background-color: #fff;
  width: 70%;
  height: 29px;
  line-height: 29px;
  text-align: center;
  margin: 0 auto;
  font-size: 12px;
  border-radius: 25px;
  color: #ccc;
}
.jiahead{
  position: fixed;
  top: 0;
  height: 57px;
  width: 100%;
  z-index: 3;
}
.nav{
    position: fixed;
    top: 57px;
    z-index: 2;
    width: 100%;
    height: 40px;
    background: #fff;
    border-bottom: 1px solid #ccc;
}
.resList-nav-li {
    width: 33%;
    margin: 10px 0;
    border-right: 1px solid #e0e0e0;
    float: left;
    text-align: center;
    background-color: #fff;
    color: #A9A9A9;
    font-size: 15px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.li-none{
    border-right: none;
}
.quyu{
    position: fixed;
    display: none;
    height: 500rpx;
    z-index: 5;
    top: 98px;
    width: 100%;
}
.quyu .qy{
    overflow-y: scroll;
    float: left;
    width: 50%;
    height: 500rpx;
    line-height: 80rpx;
    box-sizing: border-box; 
    font-size: 14px;
    color: #717273;
}
.qy view{
    text-overflow: ellipsis;
    overflow: hidden; 
    white-space:nowrap;  
    padding-left: 15rpx; 
}
.quyu-left{
    background: #fff;
}
.quyu-center{
    background: #fff;
}
.quyu-right{
    background: #f5f7f5;
}

.show{
    display: block;
}
.hide{
    display: none;
}
.fullbg{
    position: fixed;
    top:57px;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    /*transition: all 2s;*/
    opacity: 0;
    display: none;
}
.fullopacity{
    opacity: .5;
    display: block;
}
.money-left,.money-right{
    width: 50%!important;
}
.money-right{
  background: #f5f7f5;
}

