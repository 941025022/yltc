/*搜索页面*/
.jobSearch-contain {
    width: 94%;
    height: 30px;
    line-height: 30px;
    padding: 9px 3% 9px 3%;
    background-color: #ededed;
}
.jobSearch-return {
    width: 26px;
    height: 26px;
    overflow: hidden;
    color: #000;
    margin-top: 3px;
}
.jobSearch-cont {
    position: relative;
    width: 85%;
    padding: 0px 0% 0px 3%;
    height: 30px;
    background: #fff;
    border-radius: 3px;
    border: 1px solid #E3E3E3;
}
.place-class { /* WebKit browsers */
    color: #ccc;
}
.jobSearch-cont-inp {
    display: block;
    width: 60%;
    background: #fff;
    height: 100%;
    padding: 0;
    margin-left: 8px;
}
.jobSearch-cont-searchBtn {
    display: block;
    width: 18%;
    background: #fff;
    height: 30px;
    line-height: 31px;
    color: #808080;
    border-left:1px solid #e3e3e3;
    color: #39bc30;
    border-top-right-radius:3px;
    border-bottom-right-radius:3px
}
.jobSearch-cont-div {
    width: 35%;
    height: 82px;
    top: 45px;
    left: 2%;
    background: #000;
    background-color: rgba(0,0,0,0.7);
}
.jobSearch-job-pos {
    top: 4px;
    left: 20%;
}
.jobSearch-cont-ico {
    vertical-align: middle;
}
.jobSearch-cont-span {
    margin-left: 13%;
}
.jobSearch-ico {
    font-size: 12px;
    vertical-align: middle;
}
.jobSearch-company-pos {
    top: 17px;
    left: 20%;
}
.job-line {
    width: 80%;
    border-bottom: 1px solid #fff;
    opacity: 0.1;
    top: 49%;
    left: 10%;
}
.jobList-square {
    width: 0;
    height: 0;
    border-left: 10px solid transparent;
    border-right: 10px solid transparent;
    border-bottom: 10px solid #4C4C4C;
    left: 27%;
    top: -10px;
}
.job-main {
    width: 92%;
    padding: 0 4%;
}
.jobSearch-li {
    height: 45px;
    line-height: 45px;
    border-bottom: 1px solid #e0e0e0;
}
.jobSearch-liSpan {
    padding: 3px 15px;
    border: 1px solid #e0e0e0;
    border-radius: 5px;
    color: #8c8c8c;
    margin-right: 16px;
    margin-top: 10px;
}
.jobSearch-liSpan:nth-of-type(4) {
    margin-right: 0;
}


